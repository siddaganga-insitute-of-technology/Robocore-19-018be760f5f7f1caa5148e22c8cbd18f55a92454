<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bgapps"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Corsit">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginTop="32dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            >

            <ImageView
                android:padding="10dp"
                android:id="@+id/image"
                android:layout_width="91dp"
                android:layout_height="70dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="58dp"
                android:layout_marginTop="0dp"
                android:text="About Corsit"
                android:textColor="#ffffff"
                android:textSize="24sp" />

            <ImageView
                android:padding="10dp"
                android:id="@+id/imageView2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="0dp"
                app:srcCompat="@drawable/back" />
            <TextView
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="30sp"
                android:layout_marginLeft="25dp"
                android:text="LEARN,BUILD,PLAY,WIN"
               android:layout_marginTop="70dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="39dp">

            <TextView
                android:id="@+id/what"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="What We Do."
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/what"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:text="CORSIT is the premier robotics club of SIT, under the patronage of e-yantra cell of IIT Bombay working in the field of
robotics to bring together like-minded individuals to share
experience and have fun building robots. The club was
established in year 2006 and since then it has organized various
national level workshops as well as participated in various
national level events. Our aim is to empower students with the
possibility of getting their hands dirty and learning about
robotics by practically doing it. It officially controls all the
robotics activities carried out by SIT.
Our Club members have actively participated in techfests all round the country including Techfest IIT Bombay, Kshitij IIT Kharagpur, Shastra IIT Madras, Pravega IISC among many others and have brought laurels to the club.

Our club is the only one to have our labs set-up I'm collaboration with e-yantra cell of IIT Bombay in which our members build robots and projects on diverse topics including Machine Learning, Computer Vision, IOT, Embedded Systems, Blockchain among others."
                android:textSize="15sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout


            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Our Activities"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="ROBOTECH"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="bold" />
            <ImageView
                android:layout_marginTop="100dp"
                android:src="@mipmap/fc"
                android:layout_width="match_parent"
                android:layout_height="300dp" />

        </RelativeLayout>



        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="ROBOCON"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="bold" />
            <ImageView
                android:layout_marginTop="100dp"
                android:src="@mipmap/rc"
                android:layout_width="match_parent"
                android:layout_height="300dp" />

        </RelativeLayout>

        <RelativeLayout


            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="PROJECTS"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="10dp"
                android:src="@mipmap/proj" />

        </RelativeLayout>

        <RelativeLayout


            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="WORKSHOP"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="10dp"
                android:src="@mipmap/six" />

        </RelativeLayout>

        <RelativeLayout


            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="COMPETITIONS"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="10dp"
                android:src="@mipmap/comp" />

        </RelativeLayout>


    </LinearLayout>

</android.support.v4.widget.NestedScrollView>